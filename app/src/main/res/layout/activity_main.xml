<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:context=".screens.MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/onOfSwitch"
                        shadowColor="@color/purple_200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <AnalogClock
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_primary_variant">

                    <DigitalClock
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_200"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="পুর্ব নির্ধারিত"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/fiveMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/five_min"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/text_size"

                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/fifteenMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fifteen_min"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/text_size"

                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/thirtyMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thirty_min"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/sixtyMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sixty_min"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </RadioGroup>

                <CheckBox
                    android:id="@+id/timeSpeechOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="রাত ১২ টা - সকাল ৬ টা পর্যন্ত বন্ধ থাকবে"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>